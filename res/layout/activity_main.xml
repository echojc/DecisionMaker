<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/select_program_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_program" />
	        
    <Spinner
        android:id="@+id/current_program"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
	    <TextView 
	        android:id="@+id/do_randomize"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:background="@color/nice_shade_of_light_blue"
	        android:textSize="32dp"
	        android:gravity="center"
	        android:padding="20dp"
	        android:text="@string/do_randomize"
	        android:clickable="true"
	        android:onClick="doRandomizeOnClick" />
	    
    </RelativeLayout>

</LinearLayout>
